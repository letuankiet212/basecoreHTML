.wrapper-footer {
    position: relative;

    &::before {
        position: absolute;
        content: '';
        width: 80%;
        max-width: 1183px;
        height: 29px;
        background: url(../images/line-horiz.png) no-repeat center center;
        background-size: contain;
        top: -40px;
        left: 50%;
        //Instead of the line below you could use @include transform($scale, $rotate, $transx, $transy, $skewx, $skewy, $originx, $originy)
        transform: translateX(-50%);

        @include devices(900) {
            width: 100%;
        }
    }

    &::after {
        position: absolute;
        content: '';
        width: 80%;
        max-width: 1183px;
        height: 29px;
        background: url(../images/line-horiz.png) no-repeat center center;
        background-size: contain;
        bottom: -40px;
        left: 50%;
        //Instead of the line below you could use @include transform($scale, $rotate, $transx, $transy, $skewx, $skewy, $originx, $originy)
        transform: translateX(-50%);

        @include devices(900) {
            width: 100%;
        }
    }

    @include devices(1200) {
        // padding-bottom: 17px;

        // &:after {
        //     display: block;
        //     bottom: -17px;
        //     top: inherit;
        // }
    }
}

.info-game {
    width: 95%;
    max-width: 820px;
    margin: 0 auto;

    @include devices(375) {
        width: 90%;
    }

    @include devices(411) {
        width: 85%;
    }

    @include devices(1200) {
        padding: 40px 0;
    }

    .icon-game {
        float: left;
        width: 80px;
        margin-top: 10px;

        @include devices(375) {
            margin-top: 14px;
        }

        @include devices(411) {
            width: 90px;
            margin-top: 8px;
        }

        @include devices(480) {
            width: 100px;
            margin-top: 2px;
        }

        @include devices(544) {
            width: 140px;
            margin-top: 2px;
        }

        @include devices(700) {
            width: 185px;
            margin-top: 0;
        }

        @include devices(1200) {
            width: 240px;
            margin-top: 35px;
        }
    }

    .info-txt {
        float: right;
        color: #f9e0b0;
        font-size: 15px;
        width: calc(100% - 100px);
        padding-left: 5px;

        .txt-more-game {
            margin-top: 5px;
            font-size: 11px;
            text-align: justify;
        }

        &:before {
            content: '';
            width: 1px;
            height: 100%;
            max-height: 236px;
            background: url(../images/line-vert.png) center no-repeat;
            background-size: 100% 100%;
            position: absolute;
            left: 99px;

            @include devices(375) {
                left: 108px;
            }

            @include devices(411) {
                left: 132px;
            }

            @include devices(480) {
                left: 150px;
            }

            @include devices(544) {
                left: 190px;
            }

            @include devices(600) {
                left: 195px;
            }

            @include devices(700) {
                width: 3px;
                left: 250px;
            }

            @include devices(768) {
                left: 255px;
            }

            @include devices(900) {
                left: 265px;
            }

            @include devices(1000) {
                left: 285px;
            }

            @include devices(1100) {
                left: 340px;
            }

            @include devices(1200) {
                left: 445px;
                top: 70px;
            }
        }

        @include devices(375) {
            width: calc(100% - 90px);
            padding-left: 10px;
            font-size: 20px;
        }

        @include devices(411) {
            width: calc(100% - 98px);
            padding-left: 15px;
        }

        @include devices(480) {
            width: calc(100% - 110px);
        }

        @include devices(544) {
            width: calc(100% - 150px);
            font-size: 24px;

            .txt-more-game {
                font-size: 16px;
            }
        }

        @include devices(600) {
            font-size: 27px;

            .txt-more-game {
                font-size: 18px;
            }
        }

        @include devices(700) {
            width: calc(100% - 200px);
            font-size: 32px;

            .txt-more-game {
                font-size: 19px;
            }
        }

        @include devices(1200) {
            width: calc(100% - 260px);
            font-size: 41px;

            .txt-more-game {
                font-size: 24px;
            }
        }
    }
}

