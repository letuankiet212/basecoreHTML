.footer {
    background: #0f181f;
    color: white;
    height: 222px;
    width: 100%;
    margin: auto;
    margin-top: 155px;
}

.footer .container {
    width: 1024px;
    margin: 0 auto;
}

.footer .container .left_logo {
    width: 172px;
}

.footer .container .right_logo {
    width: 151px;
}

.footer .content {
    position: relative;
}

.footer .content div {
    margin: 3px 0;
}

.footer .top_text ul {
    display: flex;
    margin: auto;
    width: -webkit-fit-content;
    width: -moz-fit-content;
    width: fit-content;
}

.footer .top_text ul li {
    text-decoration: none;
    margin: 1px;
    font-size: 16px;
}

.footer .top_text ul li a:hover {
    color: #ffe2b4;
}

.footer .middle_text {
    margin: 1px 0;
}

.footer .middle_text p {
    font-size: 16px;
}

.footer .bottom_text p {
    font-size: 16px;
}

.footer .bottom_text p span {
    font-weight: bold;
}