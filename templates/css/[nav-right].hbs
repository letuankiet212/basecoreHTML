.nav-right {
    width: 245px;
    height: 522px;
    position: absolute;
    top: 16.5rem;
    background: url(https://lmtk.vn/bundles/web/home/images/pc/nav-right.png) center top/auto no-repeat;
    right: 0;
    transition: all 1s ease;
    margin: 0 auto;
    text-align: center;
    z-index: 9999;

    &.open {
        right: -144px;

        @include devices(1600) {
            // right: 50px;
        }

        @include devices(1920) {
            right: 0px;
        }
    }
}

