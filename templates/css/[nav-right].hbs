.qr-code {
    margin: 45px 20px 0;
    display: block;
}

.link-appstore,
.link-ggplay {
    width: 163px;
    height: 49px;
    display: block;
    margin: 10px 22px -4px;

    img {
        width: 100%;
    }
}

.link-pc {
    width: 164px;
    height: 51px;
    background: url(https://lmtk.vn/bundles/web/home/images/pc/down-pc.png) left top/auto no-repeat;
    margin-top: 12px;
    margin-left: 22px;
    display: block;

    &:hover {
        background-position: right top;
    }
}

.btn-social-nav {
    margin: 14px 24px 0;
    text-align: left;

    a {
        width: 41px;
        height: 41px;
        background-color: blue;
        display: inline-block;
        margin: 0 5px;

        &:hover {
            background-position: right top;
        }

        &.btn-home {}

        &.btn-fb {
            background-position: left center;

            &:hover {
                background-position: right center;
            }
        }

        &.btn-yt {
            background-position: left bottom;

            &:hover {
                background-position: right bottom;
            }
        }
    }
}

