.about-footer {}

.footer {
    background: url(../images/mb/bg-footer-mb.jpg) center/100% 100% no-repeat;
    position: relative;
    margin: 0 auto;
    padding: 0;

    @include devices(768) {}

    @include devices(1024) {
        background: url(../images/pc/bg-footer-pc.jpg) center/auto no-repeat;
    }
}

.wrapper-footer {
    position: relative;
    height: 170px;
    padding-top: 20px;
    justify-content: center;
    align-items: flex-start;

    @include devices(768) {
        height: 225px;
        align-items: center;
        padding: 0;
    }
}

.info-game {
    text-align: center;
    margin: 0 10px;

    @include devices(576) {
        margin: 0 20px;
    }

    @include devices(768) {
        margin: 0 30px;
    }

    img {
        width: auto;
        max-width: 100%;
    }
}

.info-footer {
    color: #e9f4ee;
    font-size: 12px;
    line-height: 1.3;
    padding: 0;

    a {
        color: #e9f4ee;
    }

    @include devices(576) {
        font-size: 15px
    }

    @include devices(768) {
        font-size: 18px;
    }

    @include devices(1024) {
        a {
            &:hover {
                color: #dfcf75;
            }
        }
    }
}

.txt-name-game {
    font-size: 15px;

    @include devices(576) {
        font-size: 19px
    }

    @include devices(768) {
        font-size: 23px
    }
}

.txt-more-game {}

.link-footer {
    margin: 10px auto 0;
    position: relative;

    @include devices(768) {}

    @include devices(1024) {}
}

.hotline {
    li {
        display: inline-block;
        margin-right: 5px;

        @include devices(576) {
            margin-right: 10px;
        }

        @include devices(768) {
            margin-right: 15px;
        }

        @include devices(1024) {}
    }

    .tel-no {
        font-size: 15px;

        @include devices(576) {
            font-size: 19px;
        }

        @include devices(768) {
            font-size: 23px;
        }
    }
}

.link-privacy {
    li {
        display: inline-block;
        margin-right: 0;

        @include devices(768) {}

        @include devices(1024) {}
    }
}

